<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- navigation bar -->
    <style name="NavMenuButtonStyle" parent="android:TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:textColor">@drawable/but_menu_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- bottom bar -->
    <style name="BottomBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bottom_bar_height</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">#2b2f38</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

</resources>

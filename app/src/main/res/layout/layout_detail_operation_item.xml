<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/report_item_padding_vertical"
    android:paddingTop="@dimen/report_item_padding_vertical">

    <TextView
        android:id="@+id/text_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="@dimen/report_item_text_size"
        android:textColor="@color/report_item_text"
        android:text="2014.10.10 16:00" />

    <TextView
        android:id="@+id/text_process"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:layout_gravity="center"
        android:textSize="@dimen/report_item_text_size"
        android:textColor="@color/report_item_text"
        android:text="确认核查报告"/>

</LinearLayout>